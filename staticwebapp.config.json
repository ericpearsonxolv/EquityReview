{
    "auth": {
        "identityProviders": {
            "azureActiveDirectory": {
                "registration": {
                    "openIdIssuer": "https://login.microsoftonline.com/b0dcd598-b101befeb3-827c-9871271/v2.0",
                    "clientIdSettingName": "AZURE_AD_CLIENT_ID",
                    "clientSecretSettingName": "AZURE_AD_CLIENT_SECRET"
                }
            }
        }
    },
    "routes": [
        {
            "route": "/api/*",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/admin/*",
            "allowedRoles": [
                "HR.Admin"
            ]
        }
    ],
    "responseOverrides": {
        "401": {
            "redirect": "/.auth/login/aad",
            "statusCode": 302
        }
    },
    "platform": {
        "apiRuntime": "node:20"
    },
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "/api/*",
            "/*.{css,js,json,jpg,png,gif,svg,ico,woff,woff2,ttf,eot}"
        ]
    }
}