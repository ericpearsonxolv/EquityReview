# EquityReview Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# REQUIRED - Core Application
# ===========================================

# PostgreSQL database connection string
DATABASE_URL=postgresql://user:password@localhost:5432/equityreview

# Session encryption secret (generate a random 32+ character string)
SESSION_SECRET=your-session-secret-here

# ===========================================
# OPTIONAL - LLM Provider
# ===========================================

# LLM provider: "mock" (default) or "azure_openai"
LLM_PROVIDER=mock

# Azure OpenAI settings (required if LLM_PROVIDER=azure_openai)
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your-api-key
# AZURE_OPENAI_DEPLOYMENT_CHAT=gpt-4

# ===========================================
# OPTIONAL - SharePoint Integration
# ===========================================

# SharePoint site URL (e.g., https://contoso.sharepoint.com/sites/HR)
# SHAREPOINT_SITE_URL=

# SharePoint list name for history storage
# SHAREPOINT_LIST_NAME=EquityReviewHistory

# Set to "true" when running in Azure with Managed Identity
# USE_MANAGED_IDENTITY=false

# Service Principal credentials (for local development only)
# SP_TENANT_ID=your-tenant-id
# SP_CLIENT_ID=your-client-id
# SP_CLIENT_SECRET=your-client-secret

# ===========================================
# OPTIONAL - Azure Configuration
# ===========================================

# Application Insights connection string (for monitoring)
# APPLICATIONINSIGHTS_CONNECTION_STRING=

# Azure Key Vault name (for secrets management)
# AZURE_KEYVAULT_NAME=

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# Node environment
NODE_ENV=development

# Server port (default: 5000)
PORT=5000
